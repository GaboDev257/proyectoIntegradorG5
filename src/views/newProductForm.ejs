<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head.ejs', {title: 'Crear'}) %>
<body>
<!-- Header -->
  <%- include('partials/topNavbar') %>
<!-- /Header -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="titulo1">Publica tu producto</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/create" method="POST" enctype="multipart/form-data" >
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-input">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Chocolates encantados" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 200" class="form-input">
					</div>
					<div class="col-12 col-md-6"> 
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="mas-vendidos">Más vendidos</option>
							<option value="encuentra-tu-casa">Encuentra tu casa</option>
							<option value="nuevos-ingresos">Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>
					<div class="col-12">
						<label for="imagenProducto" class="form-label">Imagen</label>
						<input type="file" name="imagenProducto" />
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
	</div>
<!-- footer -->
  <%- include('partials/footer') %>
<!-- /footer -->
</body>	
</html>