<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<!-- Bootstrap Stylesheet -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
		<!-- Bootstrap icons -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
		<!-- Own Stylesheet -->
		<link rel="stylesheet" href="css/appStyle.css">
		<!-- Font Awesome Stylesheet -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	</head>
<body>
	<!-- Header -->
	<%- include('partials/topNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="product-detail">
			<div class="row">
				<div class="divizq col-lg-8">
					<div>
						<img src="/img/products/<%=detalleProducto.image %>" alt="product image" class="img-fluid" width="300" height="300">
				    	<div class="divhearth"><i class="fa-duotone fa-heart"></i></div>
					</div> 
					<div class="divchevron"><i class="fa-sharp fa-solid fa-chevron-right"></i>  </div> 
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h6 class="product-detail-tittle"><%=detalleProducto.name %></h6>
							<p class="product-detail-price small">
								<span>$ <%=detalleProducto.price %></span>
							</p>
						<div class="text-left">
							<p class="product-detail-description">
								<%=detalleProducto.description %>
							</p>
						</div>	
						<div class="divbutton">
							<button type="button" class="btn btn-light buttoncart">Agregar al carrito</button>
						</div>
						<div>
							<a href="/products/edit/<%=detalleProducto.id %>" class="action-button edit">EDITAR PRODUCTO</a>
							<form action="/products/<%=detalleProducto.id %>?_method=DELETE" method="POST" style="display: inline-flex" onsubmit="return confirm('Esta seguro que desea eliminarlo?');">
								<button type="submit" class="action-button delete">ELIMINAR</button>
							</form>
						</div>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

</body>	
</html>