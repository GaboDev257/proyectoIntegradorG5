<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Editando: ' + ProductoaEditar.name }) %>
<body>
	<!-- Header -->
	<%- include('../partials/topNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12 pb-5">
				<div id="section-tittle">Estás editando: <i><%=ProductoaEditar.name %></i></div>
			</div>
		</div>
		<div class="col-12"> 
			<form action="/products/edit/<%=ProductoaEditar.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input value="<%=ProductoaEditar.name %>" type="text" id="name" name="name" placeholder="Ej: Chocolates innombrables" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input value="$<%=ProductoaEditar.price %>" type="text" id="price" name="price" placeholder="Ej: 500" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<% if (ProductoaEditar.category=="mas-vendidos") { %>
							<option value="mas-vendidos" selected>Más vendidos</option>
							<option value="encuentra-tu-casa" >Encuentra tu casa</option>
							<option value="nuevos-ingresos" >Últimos agregados</option>
							<% } else if (ProductoaEditar.category=="encuentra-tu-casa") { %>
							<option value="encuentra-tu-casa" selected>Encuentra tu casa</option>
							<option value="mas-vendidos" >Más vendidos</option>
							<option value="nuevos-ingresos" >Últimos agregados</option>
							<% } else { %>
							<option value="mas-vendidos" >En oferta</option>
							<option value="encuentra-tu-casa" >Encuentra tu casa</option>
							<option value="nuevos-ingresos" selected>Últimos agregados</option>
							<% } %>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" class="form-input"><%=ProductoaEditar.description %></textarea>
					</div>
					<div class="divbutton">
						<button type="submit" class="btn buttoncart">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>